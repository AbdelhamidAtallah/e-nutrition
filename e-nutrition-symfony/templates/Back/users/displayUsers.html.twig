{% extends 'back/base.html.twig' %}
{% block Content %}

    <br>
    <h1>Liste des utilisateurs</h1>
    <br>
    <div class="card-content collapse show">
    <div class="table-responsive">
    <table border="1" cellpadding="50" align="center" class="table">
        <thead class="bg-primary white">
        <tr>
            <th>Id</th>
            <th>Type Compte</th>
            <th>Nom</th>
            <th>Prenom</th>
            <th>Sexe</th>
            <th>Date Naissance</th>
            <th>E-Mail</th>
            <th>Numéro de téléphone</th>
        </tr>
        </thead>
        <tr {% for u in users %}>
            <td>{{ u.id }}</td>
            <td>{{ u.typeCompte }}</td>
            <td>{{ u.nom }}</td>
            <td>{{ u.prenom }}</td>
            <td>{{ u.sexe }}</td>
            <td>{{ u.dateNaiss|date('d-m-Y') }}</td>
            <td>{{ u.email }}</td>
            <td>{{ u.tel }}</td>
            <td><a href="{{ path('UpdateUser', {'id':u.id}) }}" >Update</a></td>
            <td><a href="{{ path('DeleteUser', {'id':u.id}) }}" >Delete</a></td>
        </tr {% endfor %}>
    </table>
    </div>
    </div>
{% endblock%}